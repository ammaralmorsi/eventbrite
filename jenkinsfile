pipeline 
{
    agent any
    stages { 
    stage('Fetch code') {
            steps {
                git branch: 'main',
                credentialsId: 'Elmeselhy',
                url: 'https://github.com/ammaralmorsi/eventbrite.git'
            }
       }

    
    
        stage('Build') {
            steps {
             
               sh '''#!/usr/bin/env bash
                    . ~/.bashrc
                    conda activate eventbrite
                    pip install -r requirements.txt

                    # do stuff
                    '''
                
      
                 
                
            }
        }
        
        stage('Deploy') {
            steps {
                echo "This stage deploys the project"
                sh '''. ~/.bashrc
                        conda activate eventbrite
                       nohup uvicorn main:app --host 0.0.0.0 --port 5000 &
                    '''
            }
        }        
    }
}
