pipeline 
{
    agent any
    stages { 
    stage('Fetch code') {
            steps {
                git branch: 'main',
                credentialsId: 'Elmeselhy',
                url: 'https://github.com/ammaralmorsi/eventbrite.git'
            }
       }
     stage('pre build') {
            steps {
               sh '''#!/usr/bin/env bash
               wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -nv -O miniconda.sh
               bash miniconda.sh -b -p $WORKSPACE/miniconda
               conda config --set always_yes yes --set changeps1 no
               conda update -q conda

               conda create -n eventbrite python=3.10.4
               '''
            }
       }
    
    
        stage('Build') {
            steps {
             
               sh '''#!/usr/bin/env bash
                    source $WORKSPACE/miniconda/etc/profile.d/conda.sh
                    conda activate miniconda/envs/eventbrite/

                    # do stuff
                    '''
                
                sh "pip install -r requirements.txt"
                 
                
            }
        }
        
        stage('Deploy') {
            steps {
                echo "This stage deploys the project"
                sh "uvicorn main:app --host 0.0.0.0 --port 5000 &"
            }
        }        
        stage('Report') {
            steps {
                echo "This stage generates a report"
                
            }
        }
    }
}
