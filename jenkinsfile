pipeline 
{
    agent any
    stages { 
    stage('Fetch code') {
            steps {
                git branch: 'main',
                credentialsId: 'Elmeselhy',
                url: 'https://github.com/ammaralmorsi/eventbrite.git'
            }
       }
    
    
        stage('Build') {
            steps {
             
               sh '''#!/bin/bash
               . /home/ubuntu/miniconda3/bin/activate eventbrite
               '''
                
                sh "pip install -r requirements.txt"
                 
                
            }
        }
        
        stage('Deploy') {
            steps {
                echo "This stage deploys the project"
                sh "uvicorn main:app --host 0.0.0.0 --port 5000 &"
            }
        }        
        stage('Report') {
            steps {
                echo "This stage generates a report"
                
            }
        }
    }
}
