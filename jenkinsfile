pipeline 
{
    agent any
    stages { 
    stage('Fetch code') {
            steps {
                git branch: 'main',
                credentialsId: 'Elmeselhy',
                url: 'https://github.com/ammaralmorsi/eventbrite.git'
            }
       }
    
    
        stage('Build') {
            steps {
                sh "source ~/.bashrc"
                sh "conda activate eventbrite"
                sh "pip install -r requirements.txt"
                sh "uvicorn main:app --host 0.0.0.0 --port 5000 &" 
                
            }
        }
        
        stage('Deploy') {
            steps {
                echo "This stage deploys the project"
            }
        }        
        stage('Report') {
            steps {
                echo "This stage generates a report"
                
            }
        }
    }
}
